@page
@model OOPCapstone.Pages.TaskTracker.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tasks.ID" />
            <div class="form-group">
                <label asp-for="Tasks.Name" class="control-label"></label>
                <input asp-for="Tasks.Name" class="form-control" />
                <span asp-validation-for="Tasks.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasks.TaskStateValue" class="control-label">0:incomplete  1:inProgress  2:complete</label>
                <input asp-for="Tasks.TaskStateValue" class="form-control" />
                <span asp-validation-for="Tasks.TaskStateValue" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Tasks.State" class="control-label"></label>
                <select asp-for="Tasks.State" class="form-control"></select>
                <span asp-validation-for="Tasks.State" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Tasks.Quantity" class="control-label"></label>
                <input asp-for="Tasks.Quantity" class="form-control" />
                <span asp-validation-for="Tasks.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasks.Description" class="control-label"></label>
                <input asp-for="Tasks.Description" class="form-control" />
                <span asp-validation-for="Tasks.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasks.Notes" class="control-label"></label>
                <input asp-for="Tasks.Notes" class="form-control" />
                <span asp-validation-for="Tasks.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
